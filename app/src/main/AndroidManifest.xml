<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jtosti.moneymanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivityMain"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityWallet"
            android:label="@string/title_activity_wallet"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityWalletNew"
            android:label="@string/title_activity_wallet_new"
            android:parentActivityName=".ActivityWallet"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ActivityTransactionNew"
            android:label="@string/title_activity_transaction_new"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ActivityWallet"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>